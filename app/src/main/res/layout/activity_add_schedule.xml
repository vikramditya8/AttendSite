<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddSchedule"
    android:orientation="vertical"
    android:background="@drawable/background">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/selectUsername">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="Select User Email" />

    </com.google.android.material.textfield.TextInputLayout>


    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_below="@id/selectUsername"
        android:id="@+id/temp12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true">
    <TextView
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        android:paddingLeft="3dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="Select CheckIn Date"
        android:layout_width="300dp"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/selectDate"
        android:text="01/01/2020"
        android:textSize="20sp"/>
    <ImageView
        android:layout_below="@id/selectDate"
        android:background="@color/colorAccent"
        android:layout_centerHorizontal="true"
        android:layout_width="294dp"
        android:layout_height="2.3dp"
        android:layout_marginLeft="3dp"/>
    </LinearLayout>




<LinearLayout
    android:layout_marginLeft="58dp"
    android:layout_below="@id/temp12"
    android:id="@+id/temp13"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="Select CheckIn Time:\nFrom"
        android:layout_width="140dp"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/selectTime11"
        android:text="10:00"
        android:textSize="20sp"/>
    <ImageView
        android:layout_below="@id/selectTime11"
        android:background="@color/colorAccent"
        android:layout_centerHorizontal="true"
        android:layout_width="140dp"
        android:layout_height="2.3dp" />
</LinearLayout>



<LinearLayout
    android:layout_marginLeft="16dp"
    android:layout_below="@id/temp12"
    android:layout_toRightOf="@id/temp13"
    android:id="@+id/temp14"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="Select CheckIn Time:\nTo"
        android:layout_width="140dp"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/selectTime12"
        android:text="10:00"
        android:textSize="20sp"/>
    <ImageView
        android:layout_below="@id/selectTime11"
        android:background="@color/colorAccent"
        android:layout_centerHorizontal="true"
        android:layout_width="140dp"
        android:layout_height="2.3dp" />
</LinearLayout>







